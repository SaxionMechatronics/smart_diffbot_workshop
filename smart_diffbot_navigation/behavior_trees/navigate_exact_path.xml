<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <Sequence>
      <RecoveryNode number_of_retries="6" name="NavigateRecovery">
        <PipelineSequence name="NavigateWithReplanning">
          <RateController hz="1">
            <ComputePathToPose goal="{goal}" path="{path}" planner_id="GridBased"/>
          </RateController>
          <FollowPath path="{path}" controller_id="FollowPath"/>
        </PipelineSequence>
        <ReactiveFallback name="RecoveryFallback">
          <GoalUpdated/>
          <RoundRobin name="RecoveryActions">
            <Spin spin_dist="1.57"/>
            <BackUp backup_dist="0.50" backup_speed="0.2"/>
          </RoundRobin>
        </ReactiveFallback>
      </RecoveryNode>      
      <RecoveryNode number_of_retries="2" name="NavigateRecovery">
        <Sequence name="NavigateWithoutReplanning">
          <ComputePathThroughPoses goals="{goals}" path="{path}" planner_id="StraightLine"/>
          <FollowPath path="{path}" controller_id="FollowPath"/>
        </Sequence>
        <ReactiveFallback name="RecoveryFallback">
          <GoalUpdated/>
          <RoundRobin name="RecoveryActions">
            <Spin spin_dist="1.57"/>
            <BackUp backup_dist="0.30" backup_speed="0.05"/>
          </RoundRobin>
        </ReactiveFallback>
      </RecoveryNode>
    </Sequence>
  </BehaviorTree>
</root>